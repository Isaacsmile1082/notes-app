{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "eslint-config-prettier"
        
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["warn", "single"],
        "comma-dangle": ["error", {
            "arrays": "never"
        }],
        "@typescript-eslint/no-var-requires": 0,
        "comma-spacing": ["warn", {"before": false, "after": true}],
        "no-trailing-spaces": ["error"],
        "block-spacing": "error",
        "arrow-spacing": "error"
    }
}
